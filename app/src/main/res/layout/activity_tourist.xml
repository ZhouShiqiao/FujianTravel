<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.tourist.TouristActivity">
    <FrameLayout
        android:id="@+id/tourist_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tourist_bottomlayout"
        android:layout_alignParentBottom="true">
        <Button
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tourist_mainbutton"
            android:text="首页"
            android:drawableTop="@drawable/home_light"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清单"
            android:background="#00000000"
            android:layout_weight="1"
            android:id="@+id/tourist_listbutton"
            android:drawableTop="@drawable/cart"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:background="#00000000"
            android:layout_weight="1"
            android:id="@+id/tourist_infobutton"
            android:drawableTop="@drawable/my"/>
    </LinearLayout>
</RelativeLayout>
