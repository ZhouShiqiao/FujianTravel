<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical">
        <TextView
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:text="我的导游"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="20dp" />
        <ImageButton
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:id="@+id/guideinfo_messagebutton"
            android:background="#00000000"
            android:src="@drawable/message"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alloutline">
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/guide_afterlog"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/guide_image"
                android:src="@drawable/people_fill"
                android:background="#00000000"
                android:layout_margin="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/guide_image"
                android:layout_marginTop="10dp"
                android:text="用户名"
                android:textSize="16dp"
                android:id="@+id/guide_username"
                android:layout_alignTop="@+id/guide_image"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户ID"
                    android:layout_toRightOf="@+id/guide_image"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/guide_userid"
                    android:layout_below="@+id/guide_username"
                    />
                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="20dp"
                    android:id="@+id/guide_QRcode"
                    android:background="#00000000"
                    android:src="@drawable/qrcode"/>
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/guide_orderlist"/>
    </ScrollView>
</LinearLayout>