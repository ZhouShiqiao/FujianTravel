<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.guide.GuideActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical">
        <Button
            android:layout_width="80dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/rightoutline"
            android:gravity="center"
            android:text="我的游客"
            android:id="@+id/guide_myguide"
            />
        <TextView
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:text="闽逸行"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="20dp" />
        <Button
            android:layout_width="80dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:id="@+id/guideinfo_more"
            android:background="@drawable/leftoutline"
            android:text="更多"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_analyze"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/guide_datetime"
            android:text="2017/3/12 星期日"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guide_datetime"
            android:text="今日接单"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guide_order"
            android:text="订单"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guide_guide"
            android:text="指南"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guide_activity"
            android:text="活动"
            android:layout_weight="1"
            android:gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guide_navigation"
            android:text="导航"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/guide_contents"/>
</LinearLayout>
